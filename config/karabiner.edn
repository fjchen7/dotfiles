        [:h [:left_arrow]]
        [:j [:down_arrow]]
        [:k [:up_arrow]]
        [:l [:right_arrow]]
        [:!Sh [:!Sleft_arrow]]
        [:!Sj [:!Sdown_arrow]]
        [:!Sk [:!Sup_arrow]]
        [:!Sl [:!Sright_arrow]]
        [:!Oh [:!Oleft_arrow]]
        [:!Oj [:!Odown_arrow]]
