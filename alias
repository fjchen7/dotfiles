
alias cl='clear'
alias cls='clear'

alias ll='ls -l'
alias la='ls -A'
alias lal='ls -Al'
alias l.='ls -d .*'  # only show hidden files

alias ..='cd ../'
alias ...='cd ../../'
alias ....='cd ../../../'
function _cds() { cd $1; ls; }
alias cds='cdd'

alias gti='git'

# utility
GEO_API="ipinfo.io"
alias path="tr ':' '\n' <<< \"$PATH\""
alias ip="curl ${GEO_API}"
alias hosts='sudo vim /etc/hosts'

alias h="fc -l"
alias tree='tree -N -C'  # -N设置中文能正常显式，-C打印色彩
alias eee='echo $1'
alias pip3-upgrade-all='pip3 freeze --local | grep -v '^\-e' | cut -d = -f 1  | xargs pip3 install -U' # update all python package
alias als='alias | vim -R -'

# quick configuration
alias mvrc='vim ~/.vim_runtime/vimrcs/*.vim'
alias mzrc='vim ~/.zshrc'
alias mtrc='vim ~/.tmux.conf'
alias mals='vim ~/.alias'
alias szrc='source ~/.zshrc'

if [[ "$OSTYPE" == "darwin"* ]]; then    # macOS alias
    alias cat='bat'
    alias i2f='ofd'  # open directory：iTerminal -> finder (need plugin osx)
    alias f2i='cdf'  # open directory：finder -> iterminal (need plugin osx)
    alias -s md='open -a Typora' # open *.md with Typora by default
    alias cht='cht.sh'
    #alias ipy="python -c 'import IPython; IPython.terminal.ipapp.launch_new_instance()'"
    alias ipy=ipython
    alias python2=python2.7
    alias python=python3
    alias virtualenv2='virtualenv -p /usr/local/bin/python2'

    # upgrade
    alias brew-cask-upgrade-all='brew update && brew cask reinstall `brew cask outdated`'
    alias brew-upgrade-all='brew update && brew upgrade `brew outdated`'
    alias upgrade='pip3-upgrade-all && brew-upgrade-all'

    # proxy
    alias proxy="export http_proxy=http://127.0.0.1:1080;export https_proxy=http://127.0.0.1:1080;curl ${GEO_API}"
    alias unproxy="unset http_proxy;unset https_proxy;curl http://ip.cn"

    # config
    alias kar='open $HOME/.config/karabiner/assets/complex_modifications/modifier.json'
fi
