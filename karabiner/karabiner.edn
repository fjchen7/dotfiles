  :simlayers {
    ;; most frequently used modes
    :space-mode {:key :spacebar}
    :mouse-mode {:key :a}
    :window-management-mode {:key :w}
    :terminal-mode {:key :j}

    :config-mode {:key :e}
    :browser-mode {:key :b}
  }
  :simlayer-threshold 250

  ;; some examples
