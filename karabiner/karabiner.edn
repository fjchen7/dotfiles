      ]
    }
    {:des "mouse move (a)"
      :rules [:mouse-mode
        ;; mouse move
        [:k {:mkey {:y -1600}}]
        [:j {:mkey {:y 1600}}]
        [:h {:mkey {:x -1600}}]
        [:l {:mkey {:x 1600}}]
        [:!Ck {:mkey {:y -3200}}]
        [:!Cj {:mkey {:y 3200}}]
        [:!Ch {:mkey {:x -3200}}]
        [:!Cl {:mkey {:x 3200}}]
        [:!Ok {:mkey {:y -800}}]
        [:!Oj {:mkey {:y 800}}]
        [:!Oh {:mkey {:x -800}}]
        [:!Ol {:mkey {:x 800}}]
        ;; scroll
        [:u {:mkey {:vwheel -32}}]
        [:d {:mkey {:vwheel 32}}]
        [:!Cu {:mkey {:vwheel -64}}]
        [:!Cd {:mkey {:vwheel 64}}]
        [:!Ou {:mkey {:vwheel -16}}]
        [:!Od {:mkey {:vwheel 16}}]
        ;; left click
        [:return_or_enter :button1]
        [:!Creturn_or_enter {:pkey :button1 :modi :left_command}]
        [:!Treturn_or_enter {:pkey :button1 :modi :left_control}]
        [:!Oreturn_or_enter {:pkey :button1 :modi :left_option}]
        [:!Sreturn_or_enter {:pkey :button1 :modi :left_shift}]
        ;; right click
        [:spacebar :button2]
        [:q :escape]
      ]
    }
    {:des "window management (w)"
      :rules [:window-management-mode
        ;; :resize-window is defined in :templates
        ;; 1/2 screen
        [:a [:yabai-bsp "window --swap prev" "window --grid 2:2:0:0:1:2"]]
        [:d [:yabai-bsp "window --swap next" "window --grid 2:2:1:0:1:2"]]
        [:x [:yabai-bsp "window --warp prev" "window --grid 2:2:0:1:2:1"]]
        [:s [:yabai-bsp "window --warp next" "window --grid 2:2:0:0:2:1"]]
        ;; 2/3 screen
        [:!Ca [:yabai "window --grid 2:3:0:0:2:2"]]
        [:!Cd [:yabai "window --grid 2:3:1:0:2:2"]]
        [:!Cx [:yabai "window --grid 3:2:0:1:2:2"]]
        [:!Cs [:yabai "window --grid 3:2:0:0:2:2"]]
        ;; 1/3 screen
        [:!Sa [:yabai "window --grid 2:3:0:0:1:2"]]
        [:!Sd [:yabai "window --grid 2:3:2:0:1:2"]]
        [:!Sx [:yabai "window --grid 3:2:0:2:2:1"]]
        [:!Ss [:yabai "window --grid 3:2:0:0:2:1"]]
        [:!Se [:yabai "window --grid 3:2:0:1:2:1"]]
        [:!Sr [:yabai "window --grid 2:3:1:0:1:2"]]

        ;; corner screen
